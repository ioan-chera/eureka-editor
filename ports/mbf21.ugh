include "mbf"

supported_games doom doom2

# TODO: new sectors (https://github.com/kraflab/mbf21/blob/master/docs/level_editor_spec.md)

lineflag "block land mons" 0x1000
lineflag "block players"   0x2000

udmf_linedef blocklandmonsters
udmf_linedef blockplayers

line 1024 a "-- MBF21: Scroll X/Y offsets /tag"   :line_id
line 1025 a "-- MBF21: Scroll X/Y offsets /disp"  :line_id
line 1026 a "-- MBF21: Scroll X/Y offsets /accel" :line_id

gensector 8192 "Kill ground monsters"
gensector 4192 Damage 0 NONE 32 "5 hp" 64 "10 hp" 96 "20 hp" 4096 kill 4128 "kill-always" 4160 "kill-exit" 4192 "kill-secret"
